<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.SettingFragment"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="In this window you can setting the values for run the service with Latch"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <View android:id="@+id/primerdivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/colorLine"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set values Latch for the service:"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewToken"
        android:layout_marginTop="100dp"/>

    <View android:id="@+id/seconddivisor"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/colorLine"
        android:layout_above="@+id/editTextToken"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:maxLength="6"
        android:textColor="@android:color/white"
        android:textSize="38dp"
        android:textAlignment="center"
        android:id="@+id/editTextToken"
        android:layout_above="@+id/buttonPair"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pair!"
        android:textColor="@android:color/white"
        android:id="@+id/buttonPair"
        android:background="@drawable/button_round"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/editTextAppId"
        android:hint="App Id"
        android:textColorHint="@android:color/white"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textViewToken"
        android:layout_alignStart="@+id/textViewToken"
        android:layout_alignEnd="@+id/textViewToken" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSecretCode"
        android:hint="Secret Code"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/editTextAppId"
        android:layout_alignStart="@+id/editTextAppId"
        android:layout_alignEnd="@+id/editTextAppId" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:id="@+id/buttonSaveValues"
        android:background="@drawable/button_round"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/seconddivisor"
        android:layout_alignStart="@+id/buttonPair" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lock Phone:"
        android:id="@+id/checkBoxLockPhone"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

